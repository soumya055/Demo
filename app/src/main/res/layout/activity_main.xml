<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="self.com.firestore.MainActivity">

    <TextView
        android:id="@+id/quote_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/inspirational_quotes" />

    <EditText
        android:id="@+id/quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quote_header_text"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:inputType="text"/>

    <TextView
        android:id="@+id/author_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quote"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/author" />

    <EditText
        android:id="@+id/author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/author_header_text"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:inputType="text"/>

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/author"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:onClick="saveData"
        android:text="@string/save" />

    <Button
        android:id="@+id/fetch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/save"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:onClick="fetchData"
        android:text="@string/fetch" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fetch"
        android:hint="@string/hint_text"
        android:gravity="center"
        android:layout_marginTop="20dp" />

</RelativeLayout>
